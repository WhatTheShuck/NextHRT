AUTH_SECRET="" # Added by `npx auth`. Read more: https://cli.authjs.dev
AUTH_MICROSOFT_ENTRA_ID_ID="the application ID for entra"
AUTH_MICROSOFT_ENTRA_ID_SECRET="the secret value from enterprise app"
AUTH_MICROSOFT_ENTRA_ID_ISSUER="https://login.microsoftonline.com/your tenant ID/v2.0"
AUTH_TRUST_HOST=true
AUTH_URL="your fqdn"
DATABASE_URL="file:./db name.db"
# File upload configuration
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp,application/pdf
MAX_FILE_SIZE=5242880
MAX_FILE_SIZE_DISPLAY=5MB
ALLOWED_TYPES_DISPLAY=JPEG, PNG, WebP, PDF
NEXT_PUBLIC_CONTACT_NAME="Your IT Contact Name"
NEXT_PUBLIC_CONTACT_PHONE="Your IT Contact Phone Number"
NEXT_PUBLIC_CONTACT_EMAIL="Your IT Contact Email Address"
NEXT_PUBLIC_CONTACT_ROLE="Your IT Contact Role"
NEXT_PUBLIC_COMPANY_NAME="Your Business name to be displayed"
NEXT_PUBLIC_COMPANY_DOMAIN_EXTENSION="Your domain extension"

# User-Employee matching settings (seeds the AppSetting table on first run)
# Enable matching by email local part (e.g. jane.smith@company.com)
USER_MATCH_EMAIL_ENABLED=true
# Template describing the email local-part structure; use {firstName} and {lastName}
USER_MATCH_EMAIL_TEMPLATE={firstName}.{lastName}
# Enable exact display-name matching
USER_MATCH_NAME_EXACT_ENABLED=true
# Enable fuzzy name matching via Levenshtein similarity
USER_MATCH_NAME_FUZZY_ENABLED=true
# Minimum Levenshtein similarity (0.0–1.0) to treat as a fuzzy match
USER_MATCH_NAME_FUZZY_THRESHOLD=0.7
# Minimum combined score (0–100) for a suggestion to appear in the UI
USER_MATCH_SUGGESTION_THRESHOLD=50
